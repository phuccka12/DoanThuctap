# API Key của Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Chuỗi kết nối MongoDB Atlas
# (Lấy trong Atlas: Connect -> Drivers -> Python -> Copy chuỗi kết nối)
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?appName=Cluster0

PORT=3000

JWT_SECRET=your_super_secret_key
JWT_EXPIRES_IN=7d

# Access token (ngắn)
ACCESS_TOKEN_SECRET=access_secret_key
ACCESS_TOKEN_EXPIRES_IN=15m

# Refresh token (dài)
REFRESH_TOKEN_SECRET=refresh_secret_key
REFRESH_TOKEN_EXPIRES_IN=30d

# Cookie
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Email Service (Gmail SMTP)
APP_BASE_URL=http://localhost:5173
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=your-email@gmail.com

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
GOOGLE_LOGIN_CALLBACK_URL=http://localhost:3000/api/auth/google/login/callback
GOOGLE_REGISTER_CALLBACK_URL=http://localhost:3000/api/auth/google/register/callback

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# Client URL
CLIENT_URL=http://localhost:5173